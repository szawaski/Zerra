<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0;net6.0</TargetFrameworks>
    <Authors>Steven Zawaski</Authors>
    <Product>KaKush LLC</Product>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageTags>Framework, CQRS, Microservice, Event Sourcing, Repository, ORM, Kafka</PackageTags>
    <RepositoryUrl>https://github.com/szawaski/Zerra</RepositoryUrl>
    <Description>Kafka implementations of client and producer and consumer and events in the CQRS Zerra Framework.</Description>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>3.4.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Confluent.Kafka" Version="1.8.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Zerra\Zerra.csproj" />
  </ItemGroup>

</Project>
